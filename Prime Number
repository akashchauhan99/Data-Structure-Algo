 

#include<stdio.h>
#include<conio.h>

void main(){
    int n, isPrime = 1;
    printf("Enter the no. : ");
    scanf("%d", &n);

        if(n == 1){
            printf("It is %d\n", n);
        }
        else
        {
            for (int i = 2; i*i < n; i++)
            {
                /* code */
                if (n%i == 0)
                {
                    isPrime = 0;
                }
                
            }
            if (isPrime){
                printf("%d is Prime Number ", n);
            }else
            {
                printf("%d is not a Prime Number ", n);
            }        
        }    
    

    getch();
}
