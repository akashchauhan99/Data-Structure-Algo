 

#include<stdio.h>
#include<conio.h>

void main(){
    int n, rem, a[10];
    int i = 0;
    printf("Enter the no. : ");
    scanf("%d", &n);

    while (n)
    {
        rem = n%2;
        n = n/2;
        a[i] = rem;
        i++;
    }
    

    for (int j = i-1; j >= 0; j--)
    {
        printf("%d", a[j]);
    }
    
    getch();
}
